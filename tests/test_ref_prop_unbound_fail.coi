// Test: Reference Props must be bound by the parent.
// You cannot instantiate a component with a reference prop
// without passing a valid reference variable to it.

component Child {
    // Reference prop (internally a pointer)
    prop mut int& val; 
    view { <div>{val}</div> }
}

component App {
    view {
        // Error: Missing required prop '&val'. 
        // Reference props cannot be default-initialized and must be provided.
        <Child />
    }
}

app {
    root = App;
}

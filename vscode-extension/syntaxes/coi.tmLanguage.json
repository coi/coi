{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Coi",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#app-definition"
    },
    {
      "include": "#component-definition"
    },
    {
      "include": "#function-definition"
    },
    {
      "include": "#prop-definition"
    },
    {
      "include": "#tick-definition"
    },
    {
      "include": "#init-definition"
    },
    {
      "include": "#style-block"
    },
    {
      "include": "#view-block"
    },
    {
      "include": "#component-reference"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#types"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.coi",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.coi",
          "match": "\\b(component|def|view|return|if|else|for|while|computed|prop|tick|init|app|import|struct|style|type|global|in|root)\\b"
        },
        {
          "name": "storage.modifier.coi",
          "match": "\\b(mut|shared)\\b"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.coi",
          "match": "\\b(view|tick|prop|app)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.coi",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.coi",
          "match": "=|\\+=|-=|\\*=|/=|%="
        },
        {
          "name": "keyword.operator.comparison.coi",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.coi",
          "match": "&&|\\|\\||!"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.coi",
          "match": "\\b(int|void|string|bool|float)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.coi",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.coi",
          "match": "\\\\."
        }
      ]
    },
    "component-definition": {
      "match": "\\b(component)\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.control.coi" },
        "2": { "name": "entity.name.type.class.coi" }
      }
    },
    "component-reference": {
      "match": "\\b([A-Z][A-Za-z0-9_]*)\\b",
      "captures": {
        "1": { "name": "support.class.component.coi" }
      }
    },
    "prop-definition": {
      "match": "\\b(prop)\\b",
      "captures": {
        "1": { "name": "keyword.control.coi" }
      }
    },
    "tick-definition": {
      "match": "\\b(tick)\\b",
      "captures": {
        "1": { "name": "keyword.control.coi" }
      }
    },
    "init-definition": {
      "begin": "\\b(init)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#operators" },
        { "include": "#strings" },
        { "include": "#types" },
        { "include": "#component-reference" }
      ]
    },
    "style-block": {
      "begin": "\\b(style)\\s*(global)?\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" },
        "2": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "name": "meta.embedded.block.css",
      "patterns": [
        { "include": "source.css" }
      ]
    },
    "function-definition": {
      "match": "\\b(def)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "storage.type.function.coi" },
        "2": { "name": "entity.name.function.coi" }
      }
    },
    "view-block": {
      "begin": "\\b(view)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "patterns": [
        { "include": "#view-control-tags" },
        { "include": "#jsx-tags" },
        { "include": "#view-expression-interpolation" },
        { "include": "#comments" }
      ]
    },
    "view-control-tags": {
      "patterns": [
        {
          "comment": "Opening control flow tags: <if, <else, <for",
          "match": "(<)(if|else|for)\\b",
          "captures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" }
          }
        },
        {
          "comment": "Closing control flow tags: </if>, </else>, </for>",
          "match": "(</)(if|else|for)(>)",
          "captures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" },
            "3": { "name": "punctuation.definition.tag.coi" }
          }
        },
        {
          "comment": "For loop with in keyword and range: <for i in 0:count>",
          "match": "(<)(for)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s+(in)\\s+([a-zA-Z0-9_]+)(:)([a-zA-Z0-9_]+)(>)",
          "captures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" },
            "3": { "name": "variable.other.coi" },
            "4": { "name": "keyword.control.coi" },
            "5": { "name": "constant.numeric.coi" },
            "6": { "name": "keyword.operator.range.coi" },
            "7": { "name": "variable.other.coi" },
            "8": { "name": "punctuation.definition.tag.coi" }
          }
        },
        {
          "comment": "If tag with condition: <if condition>",
          "begin": "(<)(if)\\s+",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.coi" }
          },
          "patterns": [
            { "include": "#view-condition" }
          ]
        },
        {
          "comment": "Else tag",
          "match": "(<)(else)(>)",
          "captures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" },
            "3": { "name": "punctuation.definition.tag.coi" }
          }
        }
      ]
    },
    "view-condition": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.coi",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.coi",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "constant.language.boolean.coi",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.numeric.coi",
          "match": "\\b[0-9]+\\.?[0-9]*\\b"
        },
        {
          "name": "string.quoted.double.coi",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "variable.other.coi",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "jsx-tags": {
      "patterns": [
        {
          "match": "(</?)([A-Za-z0-9:-]+)",
          "captures": {
            "1": { "name": "punctuation.definition.tag" },
            "2": { "name": "entity.name.tag" }
          }
        },
        {
          "match": "/?>",
          "name": "punctuation.definition.tag"
        },
        {
          "name": "entity.other.attribute-name",
          "match": "\\b([A-Za-z0-9-:]+)="
        },
        {
          "include": "#strings"
        },
        {
          "include": "#view-expression-interpolation"
        },
        {
          "name": "entity.other.attribute-name.event",
          "match": "\\b(on[a-zA-Z]+)\\s*=",
          "captures": {
            "1": { "name": "support.function.event-handler" }
          }
        }
      ]
    },
    "view-expression-interpolation": {
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.section.embedded.begin.coi" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.section.embedded.end.coi" }
      },
      "patterns": [
        {
          "name": "keyword.operator.comparison.coi",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.coi",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.coi",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.ternary.coi",
          "match": "\\?|:"
        },
        {
          "name": "constant.numeric.coi",
          "match": "\\b[0-9]+\\.?[0-9]*\\b"
        },
        {
          "name": "constant.language.boolean.coi",
          "match": "\\b(true|false)\\b"
        },
        {
          "include": "#strings" },
        {
          "name": "variable.other.coi",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "expression-interpolation": {
      "begin": "\\{",
      "end": "\\}",
      "patterns": [
        { "include": "$self" },
        {
          "name": "keyword.operator.ternary.coi",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.ternary.coi",
          "match": ":"
        }
      ]
    },
    "app-definition": {
      "begin": "\\b(app)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#component-reference" },
        { "include": "#strings" },
        { "include": "#expression-interpolation" },
        { "include": "#types" }
      ]
    },
    "computed-property": {
      "match": "\\b(computed)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*\\(\\s*\\)\\s*:\\s*([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.control.coi" },
        "2": { "name": "entity.name.function.coi" },
        "3": { "name": "storage.type.coi" }
      }
    }
  },
  "scopeName": "source.coi"
}